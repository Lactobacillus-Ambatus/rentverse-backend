# Database
DATABASE_URL="postgresql://username:password@localhost:5432/rentverse?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API
API_VERSION=v1

# S3 Compatible Storage (can be used with Supabase, AWS S3, MinIO, etc)
S3_ENDPOINT=https://sqzmctmhozpevqnmuhuz.storage.supabase.co/storage/v1/s3
